{
  "name": "hkt-toolbelt",
  "private": true,
  "scripts": {
    "test": "NODE_OPTIONS=--max-old-space-size=8192 tsc --project tsconfig.spec.json",
    "stress": "NODE_OPTIONS=--max-old-space-size=8192 tsc --project tsconfig.stress.json",
    "build": "./build.sh",
    "lint": "npm run prettier-fix && npm run remove-unused-imports",
    "eslint-check": "npx eslint --ext .ts ./src/**",
    "eslint-fix": "npx eslint --fix --ext .ts ./src/**",
    "remove-unused-imports": "npx eslint --fix --ext .ts --no-eslintrc --config ./.eslintrc-remove-imports ./src/**",
    "prettier-check": "npx prettier --check ./src/**",
    "prettier-fix": "npx prettier --write ./src/**",
    "npm-update": "npx -y npm-check-updates -u && npm i"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3"
  },
  "dependencies": {
    "typescript": "^4.9.5"
  }
}